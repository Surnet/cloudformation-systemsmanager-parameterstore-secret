{
    "typeName": "Surnet::ParameterStore::Secret",
    "description": "Resource schema for creating and managing AWS Systems Manager Parameter Store Secrets with generated passwords",
    "sourceUrl": "https://github.com/surnet/cloudformation-systemsmanager-parameterstore-secret",
    "definitions": {
        "Tag": {
            "description": "A key-value pair to associate with a resource.",
            "type": "object",
            "properties": {
                "Key": {
                    "type": "string",
                    "description": "The key name of the tag.",
                    "minLength": 1,
                    "maxLength": 128
                },
                "Value": {
                    "type": "string",
                    "description": "The value for the tag.",
                    "minLength": 0,
                    "maxLength": 256
                }
            },
            "required": [
                "Key",
                "Value"
            ],
            "additionalProperties": false
        },
        "PasswordOptions": {
            "type": "object",
            "description": "Options for password generation",
            "properties": {
                "Length": {
                    "type": "integer",
                    "description": "Length of the generated password",
                    "minimum": 8,
                    "maximum": 4096,
                    "default": 16
                },
                "IncludeNumbers": {
                    "type": "boolean",
                    "description": "Whether to include numbers in the password",
                    "default": true
                },
                "IncludeSymbols": {
                    "type": "boolean",
                    "description": "Whether to include symbols in the password",
                    "default": true
                },
                "Serial": {
                    "type": "integer",
                    "description": "Whether to generate a new password",
                    "default": 1
                }
            },
            "additionalProperties": false
        }
    },
    "properties": {
        "Arn": {
            "description": "The Amazon Resource Name (ARN) of the parameter.",
            "type": "string"
        },
        "Name": {
            "description": "The name of the parameter. Must be unique in the current account and region.",
            "type": "string",
            "pattern": "^[a-zA-Z0-9_.-/]+$",
            "minLength": 1,
            "maxLength": 2048
        },
        "Description": {
            "description": "Information about the parameter that you want to add to the system.",
            "type": "string",
            "minLength": 0,
            "maxLength": 1024
        },
        "KeyId": {
            "description": "The KMS key ID to use to encrypt the parameter. If not provided, AWS will use the default key.",
            "type": "string"
        },
        "Tier": {
            "description": "Parameter Store parameter tier.",
            "type": "string",
            "enum": [
                "Standard",
                "Advanced"
            ],
            "default": "Standard"
        },
        "PasswordOptions": {
            "$ref": "#/definitions/PasswordOptions",
            "description": "Options for password generation. Either `PasswordInput` or `PasswordOptions` can be specified."
        },
        "PasswordInput": {
            "description": "The password value. Either `PasswordInput` or `PasswordOptions` can be specified.",
            "type": "string"
        },
        "Password": {
            "description": "The password value. This is a read-only property populated after creation.",
            "type": "string"
        },
        "Tags": {
            "description": "An array of key-value pairs to apply to this resource.",
            "type": "array",
            "uniqueItems": true,
            "insertionOrder": false,
            "items": {
                "$ref": "#/definitions/Tag"
            }
        }
    },
    "tagging": {
        "taggable": true,
        "tagOnCreate": true,
        "tagUpdatable": true,
        "cloudFormationSystemTags": true,
        "tagProperty": "/properties/Tags"
    },
    "additionalProperties": false,
    "required": [
        "Name"
    ],
    "readOnlyProperties": [
        "/properties/Arn",
        "/properties/Password"
    ],
    "primaryIdentifier": [
        "/properties/Name"
    ],
    "createOnlyProperties": [
        "/properties/Name"
    ],
    "handlers": {
        "create": {
            "permissions": [
                "ssm:PutParameter",
                "ssm:AddTagsToResource",
                "kms:Encrypt",
                "kms:GenerateDataKey"
            ]
        },
        "read": {
            "permissions": [
                "ssm:GetParameter",
                "ssm:DescribeParameters",
                "ssm:ListTagsForResource",
                "kms:Decrypt"
            ]
        },
        "update": {
            "permissions": [
                "ssm:PutParameter",
                "ssm:AddTagsToResource",
                "ssm:RemoveTagsFromResource",
                "ssm:GetParameter",
                "ssm:GetParameters",
                "ssm:DescribeParameters",
                "ssm:ListTagsForResource",
                "kms:Encrypt",
                "kms:Decrypt",
                "kms:GenerateDataKey"
            ]
        },
        "delete": {
            "permissions": [
                "ssm:DeleteParameter"
            ]
        },
        "list": {
            "permissions": [
                "ssm:DescribeParameters"
            ]
        }
    }
}
